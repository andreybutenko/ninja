<article class="post post--preview" data-post-id="<%= post._id %>">
    <header class="post-header">
        <a href="<%- url_for(post.path) %>"><h3 class="post-title"><%= post.title %></h3></a>
        <time class="post-date" datetime="<%= date_xml(post.date) %>">
            <%= date(post.date, "MMMM YYYY") %>
        </time>
    </header>
    <section class="post-content">
        <%- post.excerpt %>
    </section>
    <footer class="post-footer">
      <%- partial('post-tag') %>
      <a href="<%- url_for(post.path) %>" class="read-more">Read more <i class="fa fa-angle-right" aria-hidden="true"></i></a>
    </footer>
</article>
